<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/vTitle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/ivPlacePhoto"
        android:background="#B0BEC5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Andrews Ice Cream"
        android:id="@+id/tvPlaceName"
        android:textSize="16sp"
        android:layout_alignTop="@+id/ivIconNumber"
        android:layout_toRightOf="@+id/ivIconNumber"
        android:layout_toEndOf="@+id/ivIconNumber"
        android:layout_marginTop="14dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivIconNumber"
        android:src="@drawable/marker"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/vTitle"
        android:layout_toRightOf="@+id/ivPlacePhoto"
        android:layout_toEndOf="@+id/ivPlacePhoto" />

    <ImageView
        android:id="@+id/ivPlacePhoto"
        android:layout_width="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNumber"
        tools:text="1"
        android:textSize="8dp"
        android:layout_alignBaseline="@+id/tvPlaceName"
        android:layout_alignBottom="@+id/tvPlaceName"
        android:layout_alignLeft="@+id/ivIconNumber"
        android:layout_alignStart="@+id/ivIconNumber"
        android:paddingLeft="10dp" />

</RelativeLayout>